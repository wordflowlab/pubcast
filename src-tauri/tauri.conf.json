{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pubcast",
  "version": "0.2.0",
  "identifier": "com.wordflowlab.pubcast",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PubCast",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "resources": {
      "../playwright-sidecar/src": "playwright-sidecar/src",
      "../playwright-sidecar/package.json": "playwright-sidecar/package.json",
      "../playwright-sidecar/package-lock.json": "playwright-sidecar/package-lock.json"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/wordflowlab/pubcast/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEEwMDQ4QThGQzVDQjlGMTEKUldRUm44dkZqNG9Fb1BwMVNVaWRMWHJlemFxRnlWY2dxMjBFT0J6V2Zxb3BqWktoTnp4WnBFK0MK"
    }
  }
}
